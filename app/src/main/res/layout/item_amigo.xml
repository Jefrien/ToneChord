<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/item_chord_image"
            android:scaleType="centerCrop"
            android:layout_alignRight="@+id/cardview_chord_autor"
            android:layout_alignEnd="@+id/cardview_chord_autor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="jefrien@mail.com"
                android:id="@+id/cardview_mensaje_de"
                android:layout_toRightOf="@+id/imagen"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>