<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutBurbujaBG"
        android:background="@drawable/chat_bubble_to"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/itemBurbujaTexto"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:visibility="visible"
        android:id="@+id/layoutBurbujaChord"
        android:background="@drawable/box_style1_bg"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="CHORD COMPARTIDO"
            android:paddingTop="5dp"
            android:padding="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="Codigo:"
            android:id="@+id/txtBurbujaCodigoChord"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER CHORD"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_weight="0.19" />

    </LinearLayout>
</android.support.v7.widget.CardView>
