<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/regresar_pregunta"
            android:id="@+id/tituloDialog"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/linea"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/tituloDialog"
            android:background="#efefef"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/linea">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_button_normal_states"
            android:textColor="@android:color/white"
            android:text="@string/button_si"
            android:id="@+id/btnSi"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_button_normal_states"
            android:textColor="@android:color/white"
            android:text="@string/button_no"
            android:id="@+id/btnNo"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/btnSi"
            android:layout_weight="1"
            />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>