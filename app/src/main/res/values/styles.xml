<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_normal_states</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Button.Warning" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_button_warning_states</item>
    </style>

    <style name="AppTheme.Button.Blue" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_button_blue_states</item>
    </style>

    <style name="AppTheme.Button.Gray" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_button_gray_states</item>
        <item name="android:textColor">@color/btnGrayText</item>
    </style>

    <style name="AppTheme.Button.NoBg" parent="AppTheme.Button">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
